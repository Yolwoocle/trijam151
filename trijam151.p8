--player

function player_update(p)
	if btn(⬆️) and p.colly then
		p.dy = -3
	end
	if(btn(⬅️))p.dx-=0.2
	if(btn(➡️))p.dx+=0.2
	
	p.dx *= 0.9
	p.dy += p.g
	
	local x,y,xy=iscoll(p)
	p.colly=y
	
	collide(p,x,y,xy)
	
	p.x += p.dx
	p.y += p.dy
	
	for e in all(enemies)do
		local c=rect_overlap(
		p,
		{x=p.x+p.bw+p.bw, 
		y=p.y+p.by+p.bh},
		{x=e.x+2, y=e.y+2},
		{x=e.x+6, y=e.y+6})
		
		if(c) p.dx-=0.5
	end
end
