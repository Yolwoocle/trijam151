function _init()
	spd = .2
	
	players = {}
	
	btns={⬇️,⬇️,⬇️}
	for i=1,3 do
		add(players,{
			n=i,
			s=i,
			
			x=i*20,
			y=i*40-20,
			
			bx=1,
			by=1,
			bw=6,
			bh=6,
			
			g=0.1,
			
			dx=0,
			dy=0,
			btn_=btns[i]
		})
	end
	
	enemies = {}
	spawntimer={0,0,0}
end

function _update60()
	for p in all(players)do
		player_update(p)
	end
	
	for i=1,3 do
		spawntimer[i]-=1
		if spawntimer[i]<0 then
			spawntimer[i]=60+rnd(50)
			
			add(enemies,{
				x=128,
				y=i*40-8,
				s=5,
			})
		end
		
	end
	
	for e in all(enemies)do
		e.x-=0.7
	end
end

function _draw()
	cls(12)
	map()
	
	for p in all(players)do
		spr(p.s,p.x,p.y)
		
		pset(p.x,p.y,14)
	end
	
	for e in all(enemies)do
		spr(e.s,e.x,e.y)
	end
end

