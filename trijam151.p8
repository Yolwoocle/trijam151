pico-8 cartridge // http://www.pico-8.com
version 34
__lua__
function _init()
	spd = .3
	
	players = {}
	for i=1,3 do
		add(players,{
			n=i,
			s=i,
			
			x=rnd(128),
			y=rnd(128),
			dx=0,
			dy=0,
		})
	end
end

function _update60()
	for p in all(players)do
		if(btn(⬅️))p.dx -= spd
		if(btn(➡️))p.dx += spd
		if(btn(⬆️))p.dy -= spd
		if(btn(⬇️))p.dy += spd
		
		p.dx *= 0.95
		p.dy *= 0.95
		
		p.x += p.dx
		p.y += p.dy
	end
end

function _draw()
	cls()
	map()
	
	for p in all(players)do
		spr(p.s,p.x,p.y)
	end
end

