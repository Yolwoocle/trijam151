--collision
function is_solid(x,y)
	if(x<0 or x>128 or y<0 or y>128)return true
	return check_flag(0,x,y)
end

function touches_rect(x,y,x1,y1,x2,y2)
	return x1 <= x
	   and x2 >= x
	   and y1 <= y
	   and y2 >= y
end
